pipeline {
    agent {
        kubernetes {
            label 'maven-docker-agent'
            defaultContainer 'jnlp'
            yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    jenkins/label: maven-docker-agent
spec:
  containers:
  - name: maven
    image: maven:3.9.6-eclipse-temurin-17
    command:
    - cat
    tty: true
    resources:
      requests:
        cpu: "50m"
        memory: "128Mi"
  - name: docker
    image: docker:24.0.6-cli   # <-- edit if you want a different Docker CLI image
    command:
    - cat
    tty: true
    volumeMounts:
    - name: docker-socket
      mountPath: /var/run/docker.sock  # required to build/push images
  - name: jnlp
    image: jenkins/inbound-agent:3345.v03dee9b_f88fc-1
    resources:
      requests:
        cpu: "100m"
        memory: "256Mi"
  volumes:
  - name: docker-socket
    hostPath:
      path: /var/run/docker.sock
"""
        }
    }

    environment {
        GIT_CREDENTIALS = 'FutureYY'             // <-- replace with your Jenkins Git credentials ID
        SONAR_HOST_URL = 'http://sonarqube-sonarqube.sonarqube.svc.cluster.local:9000' // <-- your SonarQube URL
        SONAR_LOGIN = credentials('jenkins-sonarqube')  // <-- your Jenkins SonarQube token ID
        HARBOR_USER = credentials('jenkins-harbor')   // <-- your Harbor username credential ID
        HARBOR_PASS = credentials('')   // <-- your Harbor password/token credential ID
        IMAGE_NAME = 'harbor.lab.local/final/java-web-app-3:latest' // <-- your Harbor registry URL + image name
    }

    stages {

        stage('Checkout SCM') {
            steps {
                checkout([$class: 'GitSCM',
                          branches: [[name: 'main']],
                          doGenerateSubmoduleConfigurations: false,
                          extensions: [],
                          userRemoteConfigs: [[url: 'https://github.com/FutureYY/cicd-testing.git',  // <-- replace with your repo URL
                                               credentialsId: "${GIT_CREDENTIALS}"]]])
            }
        }

        stage('Build with Maven') {
            steps {
                container('maven') {
                    dir('java-web-app-3') {  // <-- updated to java-web-app-3
                        sh 'mvn clean package -DskipTests'
                    }
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                container('maven') {
                    dir('java-web-app-3') {  // <-- updated to java-web-app-3
                        sh """
                            mvn sonar:sonar \
                            -Dsonar.host.url=${SONAR_HOST_URL} \
                            -Dsonar.login=${SONAR_LOGIN}
                        """
                    }
                }
            }
        }

        stage('Build & Push Docker Image') {
            steps {
                container('docker') {
                    dir('java-web-app-3') {  // <-- updated to java-web-app-3
                        sh """
                            echo "Logging into Harbor..."
                            docker login -u ${HARBOR_USER} -p ${HARBOR_PASS} harbor.lab.local  # <-- replace harbor.company.com with your Harbor hostname

                            echo "Building Docker image..."
                            docker build -t ${IMAGE_NAME} .

                            echo "Pushing Docker image to Harbor..."
                            docker push ${IMAGE_NAME}
                        """
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
