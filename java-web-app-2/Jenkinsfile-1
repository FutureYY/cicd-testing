pipeline {
    agent {
        kubernetes {
            label 'maven-agent'
            defaultContainer 'jnlp'
            yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    jenkins/label: maven-agent
spec:
  containers:
  - name: maven
    image: maven:3.9.6-eclipse-temurin-17
    command:
    - cat
    tty: true
  - name: jnlp
    image: jenkins/inbound-agent:3345.v03dee9b_f88fc-1
"""
        }
    }

    environment {
        GIT_CREDENTIALS = 'FutureYY' // your GitHub credentials ID
        SONAR_HOST_URL = 'http://sonarqube.svc.cluster.local:9000'
        SONAR_LOGIN = credentials('jenkins-sonarqube') // replace with your Sonar token ID in Jenkins
    }

    stages {

        stage('Checkout SCM') {
            steps {
                checkout([$class: 'GitSCM',
                          branches: [[name: 'main']],
                          doGenerateSubmoduleConfigurations: false,
                          extensions: [],
                          userRemoteConfigs: [[url: 'https://github.com/FutureYY/cicd-testing.git',
                                               credentialsId: "${GIT_CREDENTIALS}"]]])
            }
        }

        stage('Build') {
            steps {
                container('maven') {
                    dir('java-web-app-2') {   // <-- change to your actual project folder
                        sh 'mvn clean package'
                    }
                }
            }

        }
        stage('Sonar Scan') {
            steps {
                container('maven') {
                    sh """
                        mvn sonar:sonar \
                        -Dsonar.host.url=${SONAR_HOST_URL} \
                        -Dsonar.login=${SONAR_LOGIN}
                    """
                }
            }
        }

    }

    post {
        always {
            echo 'Pipeline finished. Hee Hee lets eat bkt'
        }
        success {
            echo 'Pipeline succeeded! Chagee'
        }
        failure {
            echo 'Pipeline failed! That sucks'
        }
    }
}
