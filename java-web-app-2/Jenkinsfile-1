pipeline {
    agent any   // Use the Jenkins master node or any node with Docker installed
    environment {
        DOCKER_REGISTRY = "harbor.lab.local"        // Your Harbor URL
        IMAGE_NAME = "java-web-app"
        SONAR_PROJECT_KEY = "demo"
    }

    stages {

        stage('Checkout') {
            steps {
                echo "Checking out code..."
                git url: 'https://github.com/FutureYY/cicd-testing.git', branch: 'main'
            }
        }

        stage('Build & Test') {
            steps {
                echo "Running Maven build & tests..."
                sh 'chmod +x mvnw'
                sh './mvnw clean verify'
            }
        }

        stage('SonarQube Scan') {
            steps {
                echo "Running SonarQube scan..."
                withSonarQubeEnv('jenkins-sonarqube') {
                    sh './mvnw sonar:sonar -Dsonar.projectKey=${SONAR_PROJECT_KEY} -Dsonar.sources=src -Dsonar.java.binaries=target'
                }
            }
        }

        stage('Docker Build & Push') {
            steps {
                echo "Building and pushing Docker image to Harbor..."
                script {
                    def fullImageName = "${DOCKER_REGISTRY}/${IMAGE_NAME}:latest"
                    sh "docker build -t ${fullImageName} ."
                    sh "docker login ${DOCKER_REGISTRY} -u ${HARBOR_USERNAME} -p ${HARBOR_PASSWORD}"
                    sh "docker push ${fullImageName}"
                }
            }
        }

        stage('Harbor Scan (optional)') {
            steps {
                echo "Triggering Harbor scan..."
                // If you have Harbor API integration, you can call it here
                // e.g., sh "curl -X POST https://harbor.lab.local/api/v2.0/projects/.../scan"
            }
        }
    }

    post {
        always {
            echo "Cleaning workspace..."
            cleanWs()
        }
        success {
            echo "Pipeline completed successfully!"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}
