pipeline {
    agent {
        kubernetes {
            label 'maven-docker-agent'
            defaultContainer 'jnlp'
            yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    jenkins/label: maven-docker-agent
spec:
  containers:
  - name: maven
    image: maven:3.9.6-eclipse-temurin-17
    command:
    - cat
    tty: true
    resources:
      requests:
        cpu: "50m"
        memory: "128Mi"
  - name: docker
    image: docker:24.0.6-cli
    command:
    - cat
    tty: true
    volumeMounts:
    - name: docker-socket
      mountPath: /var/run/docker.sock
  - name: jnlp
    image: jenkins/inbound-agent:3345.v03dee9b_f88fc-1
    resources:
      requests:
        cpu: "100m"
        memory: "256Mi"
  volumes:
  - name: docker-socket
    hostPath:
      path: /var/run/docker.sock
"""
        }
    }

    environment {
        GIT_CREDENTIALS = 'FutureYY'
        SONAR_HOST_URL = 'http://sonarqube-sonarqube.sonarqube.svc.cluster.local:9000'
        SONAR_LOGIN = credentials('jenkins-sonarqube')
        HARBOR_CREDENTIALS = credentials('jenkins-harbor')
        IMAGE_NAME = "harbor.lab.local/final/java-web-app-3:1.0.${BUILD_NUMBER}"
    }

    stages {

        stage('Checkout SCM') {
            steps {
                deleteDir()
                checkout([$class: 'GitSCM',
                          branches: [[name: 'main']],
                          doGenerateSubmoduleConfigurations: false,
                          extensions: [],
                          userRemoteConfigs: [[url: 'https://github.com/FutureYY/cicd-testing.git',
                                               credentialsId: "${GIT_CREDENTIALS}"]]])
            }
        }

        stage('Build with Maven') {
            steps {
                container('maven') {
                    dir('java-web-app') {
                        sh 'mvn clean package -DskipTests'
                    }
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                container('maven') {
                    dir('java-web-app') {
                        sh '''
                            mvn org.sonarsource.scanner.maven:sonar-maven-plugin:3.10.0.2594:sonar \
                            -Dsonar.host.url=${SONAR_HOST_URL} \
                            -Dsonar.login=${SONAR_LOGIN}
                        '''
                    }
                }
            }
        }

        stage('Build & Push Docker Image') {
            steps {
                container('docker') {
                    dir('java-web-app') {
                        sh """
                            echo "Logging into Harbor..."
                            docker login -u $HARBOR_CREDENTIALS_USR -p $HARBOR_CREDENTIALS_PSW harbor.lab.local

                            echo "Building Docker image..."
                            docker build --no-cache -t ${IMAGE_NAME} .

                            echo "Pushing Docker image to Harbor..."
                            docker push ${IMAGE_NAME}
                        """
                    }
                }
            }
        }

        stage('Trigger Deployment') {
            steps {
                echo """
                    Docker image ${IMAGE_NAME} is now pushed.
                    Deployment should automatically pick up the new image if:
                    - Deployment uses imagePullPolicy: Always, or
                    - GitOps (Flux/ArgoCD) is monitoring the deployment.
                """
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
