pipeline {
    agent {
        kubernetes {
            label 'maven-agent'
            defaultContainer 'maven'
            yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: maven
    image: harbor.lab.local/java-web-app/maven-git:latest  # prebuilt image with Maven + Git + CA certs
    command:
    - cat
    tty: true
    resources:
      requests:
        cpu: 100m
        memory: 256Mi
      limits:
        cpu: 300m
        memory: 512Mi
  - name: jnlp
    image: jenkins/inbound-agent:latest
    args: ['-url', 'http://jenkins.lab.local:8080', '\${computerName}']
    resources:
      requests:
        cpu: 50m
        memory: 128Mi
      limits:
        cpu: 250m
        memory: 256Mi
"""
        }
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                dir('java-web-app') {
                    sh './mvnw clean verify'
                }
            }
        }

        stage('Sonar Scan') {
            steps {
                dir('java-web-app') {
                    withSonarQubeEnv('jenkins-sonarqube') {
                        sh '''
                        mvn sonar:sonar \
                            -Dsonar.projectKey=demo \
                            -Dsonar.host.url=$SONAR_HOST_URL \
                            -Dsonar.login=$SONAR_AUTH_TOKEN
                        '''
                    }
                }
            }
        }
    }
}
