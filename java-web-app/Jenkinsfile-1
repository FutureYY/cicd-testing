pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Scan') {
            steps {
                dir('java-web-app') { // make sure we're in the folder with mvnw
                    withSonarQubeEnv('jenkins-sonarqube') {
                        sh './mvnw clean org.sonarsource.scanner.maven:sonar-maven-plugin:3.9.0.2155:sonar'
                    }
                }
            }
        }
    }
}
